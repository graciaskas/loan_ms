                        <!-- <%var scheme_amount = print[0].amount + print[0].remaining %> -->
                        <% var remaining = Math.round(scheme_amount - mot) %>
                        <ul class="nav">
                            <li>
                                <a href="/view_scheme">
                                    <i class="glyphicon glyphicon-shopping-cart"></i>
                                    Scheme : <%=print[0].scheme_name%> </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-usd"></i>
                                    Amount Taken : <%=print[0].scheme_amount%> </a>
                            </li>
                            <li class="active">
                                <a href="#">
                                    <i class="glyphicon glyphicon-user"></i>
                                    Total Paid: <%=mot%> </a>
                            </li>
                            <li class="active">
                                <a href="/info/<%=print[0].scheme_id%>/<%=print[0].cus_id%>">
                                    <i class="glyphicon glyphicon-usd"></i>
                                    Remainings: <%=remaining%> </a>
                            </li>
    
                            <li>
                                <a href="/installment2/<%=print[0].cus_id%>" target="_blank">
                                    <i class="glyphicon glyphicon-euro"></i>
                                    Installment: <%=print[0].installment_amount%> </a>
                            </li>
                            <li>
                                <a href="#" target="_blank">
                                    <i class="glyphicon glyphicon-euro"></i>
                                    Total Fine: <%=fine%> </a>
                            </li>
                            <% if(remaining == 0){%>
                            <li>
                                <a href="#" class="text-success">
                                    <i class="glyphicon glyphicon-heart-empty"></i>
                                    You Loan is Over </a>
                            </li>
                            <%}%>
                            <% if(remaining > 0){%>
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-heart-empty"></i>
                                    You Loan is Running </a>
                            </li>
                            <%}%>
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-time"></i>
                                    Taken Date: <%=print[0].date%> </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
    
                <div class="profile-content">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Installment NO#</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Remaining</th>
                                <th scope="col">Status</th>
                                <th scope="col">Fine</th>
                                <th scope="col">Given date</th>
                                <th scope="col">Schedule date</th>
    
                            </tr>
                        </thead>
                        <tbody>
                            <% var cnt=1 %>
                            <% print.forEach(function (user) { %>
                            <tr>
                                
                                <td><%= cnt++ %></td>
                                <td><%= user.amount %></td>
                                <td><%= user.remaining %></td>
                                <%if(user.status == "Delayed" || user.status == "Late" ){%>
                                 <td class="text-danger"><%= user.status%></td>
                                <%}%>
                                <%if(user.status != "Delayed"  && user.status != "Late"){%>
                                <td><%= user.status%></td>
                                <%}%>

                                <td><%= user.fine%></td>
                                <td><%= user.ins_date%></td>
                                <td><%= user.schedule_date%></td>
                                
                                <% }) %>
    
    
                            </tr>
    
                        </tbody>
