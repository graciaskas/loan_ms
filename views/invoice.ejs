                    <div class="profile-usertitle p-5">
                        <div class="profile-usertitle-name">
                            <img src="/uploads/<%=print[0].img%>" class="brand_logo" alt="Logo">
    
                        </div>
    
                    </div>
    
    
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    ID: <%=print[0].cus_id%> </a>
                            </li>
                            <li>
                                <a href="/profile/<%=print[0].cus_id%>">
                                    <i class="glyphicon glyphicon-user"></i>
                                    Name: <%=print[0].cus_name%> </a>
                            </li>
                            <li class="active">
                                <a href="/profile/<%=print[0].cus_id%>">
                                    <i class="glyphicon glyphicon-home"></i>
                                    Address: <%=print[0].cus_address%> </a>
                            </li>
                            <li class="active">
                                <a href="/profile/<%=print[0].cus_id%>">
                                    <i class="glyphicon glyphicon-phone"></i>
                                    Contact: <%=print[0].cus_contact%> </a>
                            </li>
                        </ul>
    
    
    
                    </div>
