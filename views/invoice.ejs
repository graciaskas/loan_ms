                        <div class="profile-usertitle-name">
                            Loan Info
                        </div>
                    </div>
                    <div class="profile-usermenu">
                        <%var mot = 0 %>
                        <% var fine  = 0 %>
                        <% print.forEach(function (user) { %>
                        <% mot  =Math.round(mot + user.amount)%>
                        <% fine = Math.round(fine + user.fine) %>
    
