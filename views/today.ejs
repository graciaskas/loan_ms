                <th scope="col">Date of Installment</th>
                <th scope="col">Action</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    
            <% print.forEach(function (user) { %>
            <tr>
                <td><%= user.install_no%></td>

                <td><%= user.cus_id %></td>
    
                <td><%= user.cus_name %></td>
    
                <td><%= user.Time %></td>
                <td>
                    <a href="/installment2/<%=user.cus_id %>" class="btn btn-primary" <% var id  = user.cus_id %></a>Pay</a>
                </td>
                <td>
                    <a href="/invoice/<%=user.cus_id %>" class="btn btn-success">Invoice</a>
    
                </td>
    
